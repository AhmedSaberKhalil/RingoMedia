@model Reminder
<h1>Create Reminder</h1>
<form asp-action="Create" method="post">
    <div>
        <label>Title</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Date-Time</label>
        <input asp-for="DateTime" type="datetime-local" />
    </div>
    <button type="submit">Create</button>
</form>
